<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_amazon_delete_product_wizards_form" model="ir.ui.view">
        <field name="name">Amazon delete product Wizards Form</field>
        <field name="model">delete.product.wizards</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="product_id"/>
                </group>
            </form>

        </field>
    </record>

    <record id="action_amazon_delete_product_wizards" model="ir.actions.act_window">
        <field name="name">Delete Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">delete.product.wizards</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
